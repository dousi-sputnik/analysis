<%= render 'shared/item_header' %>
<div class="masthead" style="background-image: url(<%= asset_pack_path 'media/images/analysis.jpg' %>);">
  <section class="py-5">
    <div class="container px-5 mb-5">
      <div class="text-center mb-5">
          <h1 class="display-5 fw-bolder mb-0"><span class="text-gradient d-inline">分析表一覧</span></h1>
      </div>
      <div class="row gx-5 justify-content-center">
        <div class="col-lg-11 col-xl-9 col-xxl-8">
          <div class="card overflow-hidden shadow rounded-4 border-0 mb-5">
            <div class="card-body p-0">
              <div class="d-flex align-items-center">
                <div class="p-5">
                  <h2 class="fw-bolder">Project Name 1</h2>
                  <p>Lorem ipsum dolor sit amet consectetur adipisicing elit. Eius at enim eum illum aperiam placeat esse? Mollitia omnis minima saepe recusandae libero, iste ad asperiores! Explicabo commodi quo itaque! Ipsam!</p>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>  
  <div class="container">
    <h1>Your Items</h1>
    <%= link_to 'New Item', new_user_item_path(current_user) %>
    <h2>ABC分析一覧</h2>

    <% @analysis_sessions.each do |session| %>
      <div>
        <%= link_to truncate(session.title, length: 50), analysis_session_path(session) %>
        <p><strong>作成日時:</strong> <%= session.created_at.strftime('%Y/%m/%d %H:%M') %></p>
        <p><strong>説明文:</strong> <%= truncate(session.description, length: 50) %></p>
        <%= link_to "削除", analysis_session_path(session), method: :delete, data: { confirm: "この分析セッションと関連するabc分析結果を削除してもよろしいですか?" } %>
      </div>
    <% end %>
    <%= link_to "Home", root_path %>
  </div>
</div>
