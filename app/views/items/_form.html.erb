<%= form_with url: create_bulk_user_items_path(current_user), local: true do |f| %>
  <div class="mb-3" %>
    <label for="bulk_input" class="form-label">Excelデータペーストエリア</label>
    <%= f.text_area :bulk_input, class: 'form-control', row: 100, placeholder: "こちらにExcel等のデータをコピー&ペーストしてください" %>
  </div>
  <% if @items&.errors&.any? %>
    <div class="alert alert-danger" role="alert">
      <ul>
        <% @items.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <%= f.submit '計算開始', class: 'btn btn-primary mt-2' %>
<% end %>
