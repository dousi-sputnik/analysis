<%= render 'shared/header' %>
<div class="masthead" style="background-image: url(https://abcanalysis.s3.ap-northeast-1.amazonaws.com/analysis.jpg);">
  <div class="container mt-4">
    <div class="card">
      <div class="card-header">
        <h5 class='form-header-text'>お問い合わせフォーム</h5>
      </div>
      <div class="card-body">
        <%= form_with(model: @contact, local: true) do |f| %>
          <% if @contact.errors.any? %>
            <div id="error_explanation">
              <ul>
                <% @contact.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                <% end %>
              </ul>
            </div>
          <% end %>
          <table class="table">
            <tr>
              <th><%= f.label "お名前" %></th>
              <td><%= f.text_field :name, placeholder: "お名前(最大50文字)", class: "form-control" %></td>
            </tr>
            <tr>
              <th><%= f.label "お問合せ内容" %></th>
              <td><%= f.text_area :content, placeholder: "お問合せ内容を入力してください(最大300文字)", class: "form-control", rows: 5 %></td>
            </tr>
          </table>
          <div class="mt-3">
            <%= f.button type: "submit", class: "btn btn-dark w-100" do %>
              送信
            <% end %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
