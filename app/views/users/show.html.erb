<%= render 'shared/header' %>
<div class="masthead" style="background-image: url(https://abcanalysis.s3.ap-northeast-1.amazonaws.com/analysis.jpg);">
  <div class="container mt-5">
    <div class="row">
      <div class="col-md-6 offset-md-3">

        <div class="card">
          <div class="card-header text-center">
            <h1><%= @user.name %></h1>
          </div>
          <div class="card-body">
            <table class="table table-striped">
              <tbody>
                <tr>
                  <th>ユーザー名</th>
                  <td><%= @user.name %></td>
                </tr>
                <tr>
                  <th>Email</th>
                  <td><%= @user.email %></td>
                </tr>
              </tbody>
            </table>
            <div class="text-center">
              <%= link_to "プロフィール編集", edit_user_registration_path, class: 'btn btn-dark' %>
            </div>
          </div>
        </div>

        <div class="card mt-5">
          <div class="card-header text-center">
            <h2>ABC分析結果</h2>
          </div>
          <div class="card-body">
            <ul class="list-group">
              <% current_user.analysis_sessions.each do |session| %>
                <li class="list-group-item">
                  <%= link_to session.title, analysis_session_path(session) %>
                </li>
              <% end %>
            </ul>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
